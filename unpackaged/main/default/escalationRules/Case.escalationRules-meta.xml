<?xml version="1.0" encoding="UTF-8"?>
<EscalationRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <escalationRule>
        <fullName>Escalation Rule POC</fullName>
        <active>true</active>
        <ruleEntry>
            <businessHoursSource>None</businessHoursSource>
            <criteriaItems>
                <field>Case.IsClosed</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
            <escalationAction>
                <assignedTo>gsdevopsteamdev@gmail.com</assignedTo>
                <assignedToType>User</assignedToType>
                <minutesToEscalation>600</minutesToEscalation>
                <notifyCaseOwner>false</notifyCaseOwner>
                <notifyTo>gsdevopsteamdev@gmail.com</notifyTo>
                <notifyToTemplate>unfiled$public/SupportCaseAssignmentNotification</notifyToTemplate>
            </escalationAction>
            <escalationStartTime>CaseCreation</escalationStartTime>
        </ruleEntry>
    </escalationRule>
</EscalationRules>
